<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/status"
        android:background="@color/text_bule"
        />
    <LinearLayout
                  android:background="@color/text_bule"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/actionbar">
        <LinearLayout
            android:id="@+id/lin_back"
            android:layout_width="@dimen/back_width"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/back_image"
                android:layout_height="@dimen/back_image"
                android:layout_gravity="center"
                android:background="@drawable/back_lock"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/back"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/text_cs"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_title"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_weight="1"
            />
        <RelativeLayout
            android:id="@+id/rel_search"
            android:layout_width="@dimen/back_width"
            android:layout_height="match_parent"
            >
            <ImageView
                android:src="@drawable/search"
                android:layout_width="@dimen/del_image"
                android:layout_height="@dimen/del_image"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
    </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            >
            <ListView
                android:id="@+id/list_depaerment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:background="@color/white"
                />
            <LinearLayout
                android:id="@+id/lin_wifi_err"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="@color/white"
                android:visibility="invisible"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true">
                <ImageView
                    android:id="@+id/img_net_err"
                    android:layout_width="300px"
                    android:layout_height="300px"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/text_no_data"
                    android:layout_width="wrap_content"
                    android:paddingLeft="30px"
                    android:paddingRight="30px"
                    android:layout_gravity="center"
                    android:layout_height="100px"
                    android:text="重新加载"
                    android:layout_marginTop="100px"
                    android:textColor="@color/white"
                    android:background="@drawable/login_sel"
                    android:textSize="@dimen/text_cs"
                    android:gravity="center"
                    />
            </LinearLayout>
        </RelativeLayout>

</LinearLayout>