<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/status"
        android:background="@color/text_bule"
        android:fitsSystemWindows="true"/>
    <include
        layout="@layout/title_back"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        >
        <!--左边文字-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="90px"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lin_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                />

        </LinearLayout>
        <!--中间图片-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text_all_body"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="100px"
                android:gravity="center"
                android:background="@drawable/yuanjiao_item_lock"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/img_body_font"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/body_front"
                    />
                <ImageView
                    android:id="@+id/img_body_after"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/body_after"
                    android:visibility="invisible"
                    />
                </RelativeLayout>
            <ImageView
                android:id="@+id/img_transt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/body_rotate"
                android:layout_marginBottom="150px"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <!--右边文字-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="90px"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/lin_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>