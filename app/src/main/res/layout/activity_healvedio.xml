<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/status"
        android:background="@color/text_bule"
        />
    <include
        layout="@layout/title_back"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/xrefresh"
            android:background="@color/text_bule"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <GridView
                android:id="@+id/list_vedio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="2"
                android:horizontalSpacing="20dp"
                android:verticalSpacing="40dp"
                android:gravity="center"
                android:background="@color/white"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                />
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        <RelativeLayout
            android:id="@+id/pro_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
            <ProgressBar
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_centerInParent="true"
                android:indeterminateTint="@color/text_bule"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/lin_wifi_err"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:visibility="gone"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true">
                <ImageView
                    android:id="@+id/img_net_err"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/text_no_data"
                    android:layout_width="wrap_content"
                    android:paddingLeft="30px"
                    android:paddingRight="30px"
                    android:layout_gravity="center"
                    android:layout_height="100px"
                    android:text="重新加载"
                    android:layout_marginTop="100px"
                    android:textColor="@color/white"
                    android:background="@drawable/login_sel"
                    android:textSize="@dimen/text_cs"
                    android:gravity="center"
                    />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>