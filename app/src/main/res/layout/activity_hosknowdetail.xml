<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/status"
        android:layout_alignParentTop="true"
        android:background="@color/text_bule"
        android:fitsSystemWindows="true"/>
    <include
        layout="@layout/title_back"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            >
            <TextView
                android:id="@+id/text_news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="130px"
                android:textSize="@dimen/text_center"
                android:layout_marginTop="30px"
                android:gravity="center"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="20px"
                android:background="@color/danhui"
                />
            <LinearLayout
                android:id="@+id/text_news_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_cs"
                android:layout_marginTop="30px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:gravity="center"
                android:orientation="vertical"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>