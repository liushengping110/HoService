<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/status"
            android:layout_alignParentTop="true"
            android:background="@color/text_bule"
            android:fitsSystemWindows="true"/>
        <include
            layout="@layout/title_back"
            />
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/lin_all_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="90px"
                            android:background="@color/danhui"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="科室"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_cs"
                                android:layout_marginLeft="50px"
                                android:gravity="center"
                                />
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >
                            <wizrole.hoservice.view.CustListView
                                android:id="@+id/list_deparent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:divider="@null"
                                />
                            <LinearLayout
                                android:id="@+id/lin_wifi_err_depar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:background="@color/white"
                                android:visibility="gone"
                                android:layout_centerVertical="true"
                                android:layout_alignParentStart="true">
                                <ImageView
                                    android:id="@+id/img_net_err_depar"
                                    android:layout_width="200px"
                                    android:layout_height="200px"
                                    android:layout_gravity="center"
                                    />
                                <TextView
                                    android:id="@+id/text_no_data_depar"
                                    android:layout_width="wrap_content"
                                    android:paddingLeft="30px"
                                    android:paddingRight="30px"
                                    android:layout_gravity="center"
                                    android:layout_height="100px"
                                    android:text="当前搜索无结果"
                                    android:textColor="@color/shenhui"
                                    android:layout_marginTop="100px"
                                    android:textSize="@dimen/text_cs"
                                    android:gravity="center"
                                    />
                            </LinearLayout>
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="90px"
                            android:background="@color/danhui"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="医生"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_cs"
                                android:layout_marginLeft="50px"
                                android:gravity="center"
                                />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >
                            <wizrole.hoservice.view.CustListView
                                android:id="@+id/list_doc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:divider="@null"
                                />
                            <LinearLayout
                                android:id="@+id/lin_wifi_err_doc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:background="@color/white"
                                android:visibility="gone"
                                android:layout_centerVertical="true"
                                android:layout_alignParentStart="true">
                                <ImageView
                                    android:id="@+id/img_net_err_doc"
                                    android:layout_width="200px"
                                    android:layout_height="200px"
                                    android:layout_gravity="center"
                                    />
                                <TextView
                                    android:id="@+id/text_no_data_doc"
                                    android:layout_width="wrap_content"
                                    android:paddingLeft="30px"
                                    android:paddingRight="30px"
                                    android:layout_gravity="center"
                                    android:layout_height="100px"
                                    android:layout_marginTop="100px"
                                    android:text="当前搜索无结果"
                                    android:textColor="@color/shenhui"
                                    android:textSize="@dimen/text_cs"
                                    android:gravity="center"
                                    />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin_wifi_err"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/img_net_err"
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/text_no_data"
            android:layout_width="wrap_content"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:layout_gravity="center"
            android:layout_height="100px"
            android:text="重新加载"
            android:layout_marginTop="100px"
            android:textColor="@color/white"
            android:background="@drawable/login_sel"
            android:textSize="@dimen/text_cs"
            android:gravity="center"
            />
    </LinearLayout>
</RelativeLayout>