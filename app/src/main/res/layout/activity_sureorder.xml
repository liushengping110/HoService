<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/status"
            android:background="@color/text_bule"
            />
        <include
            layout="@layout/title_back"
            />
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="180px"
            >
            <!--ScrollView的直接子类-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <!--地址-->
                <LinearLayout
                    android:id="@+id/lin_address"
                    android:layout_width="match_parent"
                    android:layout_height="220px"
                    android:background="@color/white"
                    >
                    <ImageView
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:layout_gravity="center"
                        android:src="@drawable/address"
                        android:layout_marginLeft="40px"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:id="@+id/text_sure_name"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_center"
                                android:singleLine="true"
                                android:gravity="center"
                                android:text="请添加一个地址"
                                />
                            <View
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                />
                            <TextView
                                android:id="@+id/text_sure_tel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_cs"
                                android:singleLine="true"
                                android:gravity="center"
                                />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/text_sure_add"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:textSize="@dimen/text_samll"
                            android:singleLine="true"
                            android:textColor="@color/shenhui"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>
                    <ImageView
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:layout_gravity="center"
                        android:src="@drawable/right"
                        android:layout_marginRight="30px"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/danhui"
                    />
                <!--送达-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130px"
                    android:background="@color/white"
                    >
                    <ImageView
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:layout_gravity="center"
                        android:src="@drawable/time"
                        android:layout_marginLeft="40px"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="送达时间"
                        android:textSize="@dimen/text_center"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        />
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:id="@+id/text_order_send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="尽快送达"
                        android:textSize="@dimen/text_cs"
                        android:textStyle="bold"
                        android:textColor="@color/text_bule"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@color/danhui"
                        />
                    <TextView
                        android:id="@+id/text_order_time"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="预计时间设置"
                        android:textSize="@dimen/text_cs"
                        android:layout_gravity="center"
                        />
                    <ImageView
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:layout_gravity="center"
                        android:src="@drawable/right"
                        android:layout_marginRight="30px"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/danhui"
                    />
                <!--支付方式-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical"
                    android:background="@color/white"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="120px"
                        android:text="店铺名称"
                        android:textSize="@dimen/text_cs"
                        android:textStyle="bold"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/danhui"
                        />
                    <wizrole.hoservice.view.CustListView
                        android:id="@+id/list_sel_food"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30px"
                        android:layout_marginLeft="30px"
                        android:divider="@null"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/danhui"
                        />
                    <!--配送费-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:layout_marginRight="30px"
                        android:layout_marginLeft="30px"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="配送费"
                            android:textSize="@dimen/text_cs"
                            android:gravity="center"
                            />
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:id="@+id/text_psf"
                            android:layout_width="200px"
                            android:layout_height="match_parent"
                            android:text="￥ 5"
                            android:gravity="center"
                            android:textSize="@dimen/text_cs"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/danhui"
                        />
                    <!--待支付-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120px"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="订单总金额"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_cs"
                            />
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="￥"
                            android:gravity="center"
                            android:textSize="@dimen/text_cs"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/text_d_pay"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="45px"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/danhui"
                    />
                <!--订单备注-->
                <LinearLayout
                    android:id="@+id/lin_order_other"
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:background="@color/white"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="订单备注"
                        android:textSize="@dimen/text_cs"
                        android:textStyle="bold"
                        android:layout_marginLeft="15dp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        />
                    <ImageView
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:src="@drawable/right"
                        android:layout_marginRight="30px"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/danhui"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="120px"
                    android:text="支付方式"
                    android:textSize="@dimen/text_cs"
                    android:textStyle="bold"
                    android:layout_marginLeft="30px"
                    android:gravity="center"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/danhui"
                    />
                <LinearLayout
                    android:id="@+id/lin_alipay"
                    android:layout_width="match_parent"
                    android:layout_height="110px"
                    android:layout_marginLeft="50px"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_alipay"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/sel_time"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="支付宝"
                        android:layout_marginLeft="30px"
                        android:textSize="@dimen/text_cs"
                        android:gravity="center"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/danhui"
                    />
                <LinearLayout
                    android:id="@+id/lin_wx"
                    android:layout_width="match_parent"
                    android:layout_height="110px"
                    android:layout_marginLeft="50px"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_wx"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/no_sel_time"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="微信"
                        android:layout_marginLeft="30px"
                        android:textSize="@dimen/text_cs"
                        android:gravity="center"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/danhui"
                    />
                <LinearLayout
                    android:id="@+id/lin_yl"
                    android:layout_width="match_parent"
                    android:layout_height="110px"
                    android:layout_marginLeft="50px"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_yl"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/no_sel_time"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="银联"
                        android:layout_marginLeft="30px"
                        android:textSize="@dimen/text_cs"
                        android:gravity="center"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/danhui"
                    />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/shenhui"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="待支付"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_center"
            android:layout_marginLeft="40px"
            />
        <TextView
            android:id="@+id/text_all_pay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="￥--"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_center"
            />
        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/text_updata"
            android:layout_width="300px"
            android:layout_height="match_parent"
            android:text="提交订单"
            android:gravity="center"
            android:textSize="@dimen/text_center"
            android:background="@color/text_bule"
            android:textColor="@color/white"
            />
    </LinearLayout>
</RelativeLayout>