<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/danhui"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_samll"
        android:background="@color/text_bule"
        android:fitsSystemWindows="true"/>
    <include
        layout="@layout/title_back"
        />
    <include
        layout="@layout/search_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar"
        />
   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
       <com.scwang.smartrefresh.layout.SmartRefreshLayout
           android:id="@+id/xrefresh"
           android:background="@color/white"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
            <ListView
                android:id="@+id/list_westmed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:visibility="invisible"
                />
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
       <LinearLayout
           android:id="@+id/lin_wifi_err"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_gravity="center"
           android:visibility="invisible"
           android:layout_centerVertical="true"
           android:layout_alignParentStart="true">
           <ImageView
               android:id="@+id/img_net_err"
               android:layout_width="300px"
               android:layout_height="300px"
               android:layout_gravity="center"
               />
           <TextView
               android:id="@+id/text_err_agagin_center"
               android:layout_width="wrap_content"
               android:paddingLeft="30px"
               android:paddingRight="30px"
               android:layout_gravity="center"
               android:layout_height="100px"
               android:layout_marginTop="90px"
               android:textSize="@dimen/text_cs"
               android:gravity="center"
               />
       </LinearLayout>
       <ProgressBar
           android:id="@+id/pro_main"
           android:layout_width="90px"
           android:layout_height="90px"
           android:indeterminateTint="@color/text_bule"
           android:layout_gravity="center"
           android:layout_centerInParent="true"
           />
    </RelativeLayout>
</LinearLayout>