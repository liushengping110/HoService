<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230px"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/img_sel_address"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_gravity="center"
            android:src="@drawable/sel_address"
            android:layout_marginLeft="40px"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="130px"
                android:layout_marginLeft="50px"
                >
                <TextView
                    android:id="@+id/text_add_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="刘胜平"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_center"
                    android:singleLine="true"
                    />
                <TextView
                    android:id="@+id/text_add_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="先生"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_center"
                    android:singleLine="true"
                    />
                <TextView
                    android:id="@+id/text_add_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="18720999936"
                    android:gravity="center"
                    android:layout_marginLeft="50px"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_center"
                    android:singleLine="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginLeft="20dp"
                >
                <TextView
                    android:id="@+id/text_add_detailadd"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="锐创国际中心B座1610"
                    android:gravity="center"
                    android:textColor="@color/shenhui"
                    android:textSize="@dimen/text_cs"
                    android:singleLine="true"
                    />
            </LinearLayout>
    </LinearLayout>
        <RelativeLayout
            android:id="@+id/img_edit"
            android:layout_width="160px"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="70px"
                android:layout_centerInParent="true"
                android:layout_height="70px"
                android:layout_gravity="center"
                android:src="@drawable/edit_address"
                />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/shenhui"
        />
</LinearLayout>