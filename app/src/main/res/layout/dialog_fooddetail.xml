<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_detail_logo"
        android:layout_width="match_parent"
        android:layout_height="600px"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/text_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="110px"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="@dimen/text_center"
        android:text="披萨"
        android:layout_marginLeft="50px"
        android:layout_marginTop="30px"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginTop="20px"
        android:layout_marginLeft="50px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/shenhui"
            android:textSize="@dimen/text_cs"
            android:text="月售"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/text_yueshou"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/shenhui"
            android:textSize="@dimen/text_cs"
            android:text="-"
            android:gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/shenhui"
            android:textSize="@dimen/text_cs"
            android:text="份"
            android:gravity="center"
            />
    </LinearLayout>
        <TextView
            android:id="@+id/text_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="90px"
            android:text="--"
            android:layout_marginLeft="50px"
            android:textSize="@dimen/text_center"
            android:gravity="center"
            android:layout_marginTop="20px"
            />
</LinearLayout>