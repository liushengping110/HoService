<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="温馨提示："
            android:textColor="@color/white"
            android:textSize="@dimen/text_cs"
            android:background="@drawable/dialog_zhuxiao_top_bg"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            />
    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:text="您确定要注销账号吗？"
            android:textColor="@color/black"
            android:background="@color/white"
            android:textSize="@dimen/text_cs"
            android:gravity="center"
            />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/white"
        android:text="注销账号将会清除本机所有与您相关的信息？"
        android:textColor="@color/red"
        android:textSize="@dimen/text_samll"
        android:gravity="center"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/text_cancle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="取消"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/dialog_cancle_lock"
                android:textSize="@dimen/text_cs"
                />
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/shenhui"
                />
            <TextView
                android:id="@+id/text_sure"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="确定"
                android:textColor="@color/white"
                android:background="@drawable/dialog_sure_lock"
                android:textSize="@dimen/text_cs"
                android:gravity="center"
                android:layout_weight="1"
                />
        </LinearLayout>
    </LinearLayout>