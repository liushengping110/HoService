<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
    android:background="@drawable/item_lock"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="420px"
        android:orientation="horizontal"
        android:layout_marginLeft="30px"
        android:background="@drawable/item_lock"
        android:layout_marginRight="30px"
        >
        <ImageView
            android:id="@+id/doc_header"
            android:layout_width="280px"
            android:layout_height="280px"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="30px"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="120px"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/doc_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="黄晓丹"
                android:textColor="@color/black"
                android:textSize="@dimen/text_center"
                android:gravity="center"
                />
                <TextView
                    android:id="@+id/doc_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="副主任医师"
                    android:textSize="@dimen/text_center"
                    android:gravity="center"
                    android:layout_marginLeft="50px"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/doc_department"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="心内科"
                    android:textSize="@dimen/text_cs"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/doc_docPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="心内科主任"
                    android:singleLine="true"
                    android:layout_marginLeft="50px"
                    android:textSize="@dimen/text_cs"
                    android:gravity="center"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/doc_RecordSchool"
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:gravity="center"
                android:text="研究生"
                android:textSize="@dimen/text_cs" />

            <TextView
                    android:id="@+id/doc_intrduce"
                    android:layout_width="wrap_content"
                    android:layout_height="100px"
                    android:maxLines="1"
                    />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/danhui"
        />

</LinearLayout>