<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/item_lock"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:background="@drawable/item_lock"
            android:layout_marginTop="20px"
            android:layout_marginRight="30px"
            android:layout_marginLeft="30px"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/img_order_logo"
                android:layout_width="260px"
                android:layout_height="260px"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    >
                    <TextView
                        android:id="@+id/text_order_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_center"
                        android:textStyle="bold"
                        android:gravity="center"
                        />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:id="@+id/text_order_status"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="订单已完成"
                        android:gravity="center"
                        android:textSize="@dimen/text_samll"
                        android:layout_marginRight="5dp"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/text_order_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-05-02"
                    android:textSize="@dimen/text_cs"
                    android:layout_marginLeft="30px"
                    />
                <TextView
                    android:id="@+id/text_order_example"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="黄焖鸡大份等2件商品"
                    android:gravity="center"
                    android:textSize="@dimen/text_cs"
                    android:layout_marginLeft="30px"
                    />
                <TextView
                    android:id="@+id/text_order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥36"
                    android:textSize="@dimen/text_center"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:gravity="center"
                    android:layout_marginLeft="30px"
                    />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>